clear
echo               both
dimension          3
units              si
atom_style   hybrid  bond meso
boundary          p p p


# create simulation box
#3D box
include            3d-vars.lmp
region		   box prism 0.0 ${Lxbase}  0.0 ${Lybase} 0.0 ${Lzbase} 0 0 0 units box
create_box         1 box

# create fluid particles
lattice            sc ${dx}
create_atoms       1 region box

mass               1  ${sdpd_mass}



timestep           0.0e-5

write_restart      poly3d.restart

