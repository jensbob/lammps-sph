clear

echo               both
dimension          2
units              si
atom_style   hybrid  bond meso
boundary          p p p


# create simulation box
#3D box
include            3d-vars.lmp
region		   box prism 0.0 ${Lx}  0.0 ${Ly} -${Lz} ${Lz} 0 0 0 units box
create_box         1 box

# create fluid particles
lattice            sq2 ${dx}
create_atoms       1 region box

mass               1  ${sdpd_mass}

#variable  sdpd_temp index 1.0e-5


timestep           0.0e-5

write_restart      poly3d.restart

