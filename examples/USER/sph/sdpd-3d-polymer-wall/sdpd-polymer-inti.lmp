echo               both
dimension          3
units              si
atom_style   hybrid  bond meso
boundary          p f p

# create simulation box
#2D box
include            3d-vars.lmp
variable          ub equal ${Lx}+2.5*${dx}
variable          lb equal -2.0*${dx}
variable          lLx equal ${Lx}-0.5*${dx}
region            box block 0.0 ${Lx} ${lb} ${ub} 0.0  ${Lx} units box
region            fluid block 0.0 ${Lx} 0.0 ${lLx} 0.0 ${Lx}  units box

create_box        3 box

#create fluid particles

lattice            sc ${dx}
create_atoms       1 region fluid
group              fluid region fluid


mass               * ${sdpd_mass}
#set                group all meso_rho ${sdpd_rho}


timestep           0.0e-5
write_restart      poly.restart

