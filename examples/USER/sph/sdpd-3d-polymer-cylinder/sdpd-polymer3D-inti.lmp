clear

echo               both
variable           ndim string  3d
dimension          ${ndim}
units              si
atom_style   hybrid  bond meso
boundary          p p p


# create simulation box
#3D box
include            ${ndim}-vars.lmp
region             box block 0.0 ${Lx}  0.0 ${Ly} 0.0 ${Lz} units box

create_box 3 box
# create atom bulk atoms
lattice            sc ${dx}
create_atoms 1 box

group        flow type 1
variable Stot equal ${Lx}*${Ly}
variable Scyl equal 3.1415926*${rcyl}*${rcyl}
variable Nsmall equal ${Npart}*(${Stot}-${Scyl})/${Stot}

# TODO: find the way to generate the right number of atoms
# delete extra atoms
group extra_atoms id > ${Nsmall}
delete_atoms group extra_atoms

mass               *  ${sdpd_mass}

timestep           0.0e-5

write_restart      poly3d.restart

