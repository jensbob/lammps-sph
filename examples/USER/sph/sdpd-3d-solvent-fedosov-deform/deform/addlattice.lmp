"region             box prism 0.0 ${Lx}  0.0 ${Ly} 0.0 ${Lz} 0 0 0 units box"

create_box         1 box

if "${ndim}==2" then &
"lattice            sq2 ${dx}" &
else &
"lattice           sc ${dx}"

variable           eps delete
variable           negeps delete